{% extends 'admin/include/main.html.twig' %}


{#{% titre de l'activite %}#}
{% block title_job %}
	<h1 class="card-title"></h1>
{% endblock %}

{# {% operation possible %}#}
{% block option %}{% endblock %}

{# {% les donnees affichees %}#}
{% block data %}


	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="card-body">
					<h2>Bienvenue
						{{ app.user.email }}</h2>


				</div>
			</div>
		</div>

		<div class="col-md-3">
			<div class="card">
				<div class="card-body">
					<h3 class="card-title">Demandes</h3>
					<div class="col d-flex justify-content-between align-items-center">
						<h3 class="card-text">{{ demandes|length }}</h3>
						<p class="card-text ml-2">
							<i class="fas fa-archive fa-4x"></i>

						</p>
					</div>
				</div>
			</div>
		</div>

		<div class="col-md-3">
			<div class="card">
				<div class="card-body">
					<h3 class="card-title">Demandeurs</h3>
					<div class="col d-flex justify-content-between align-items-center">
						<h3 class="card-text">{{ demandeurs|length }}</h3>
						<p class="card-text ml-2">
							<i class="fas fa-user fa-4x"></i>
						</p>
					</div>
				</div>
			</div>
		</div>
		<div class="col-md-3">
			<div class="card">
				<div class="card-body">
					<h3 class="card-title">Plans</h3>
					<div class="col d-flex justify-content-between align-items-center">
						<h3 class="card-text">{{ plans|length }}</h3>
						<p class="card-text ml-2">
							<i class="fas fa-file fa-4x"></i>
						</p>
					</div>
				</div>
			</div>
		</div>
		<div class="col-md-3">
			<div class="card">
				<div class="card-body">
					<h3 class="card-title">Lotissements</h3>
					<div class="col d-flex justify-content-between align-items-center">
						<h3 class="card-text">{{ lotissements|length }}</h3>
						<p class="card-text ml-2">
							<i class="fas fa-file fa-4x"></i>
						</p>
					</div>
				</div>
			</div>
		</div>

		<div class="col-md-3">
			<div class="card">
				<div class="card-body">
					<h3 class="card-title">Parcelles</h3>
					<div class="col d-flex justify-content-between align-items-center">
						<h3 class="card-text">{{ parcelles|length }}</h3>
						<p class="card-text ml-2">
							<i class="fas fa-file fa-4x"></i>
						</p>
					</div>
				</div>
			</div>
		</div>
		<div class="col-md-3">
			<div class="card">
				<div class="card-body">
					<h3 class="card-title">Utilisateurs</h3>
					<div class="col d-flex justify-content-between align-items-center">
						<h3 class="card-text">{{ users|length }}</h3>
						<p class="card-text ml-2">
							<i class="fas fa-user fa-4x"></i>
						</p>
					</div>
				</div>
			</div>
		</div>

	</div>


{% endblock %}
