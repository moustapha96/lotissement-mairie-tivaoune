{% extends 'admin/include/main.html.twig' %}


{#{% titre de l'activite %}#}
{% block title_job %}
	<h1 class="card-title">
		{{  'Détail Demandeur' }}
	</h1>
{% endblock %}

{# {% operation possible %}#}
{% block option %}
	{% for message in app.flashes('success') %}

		<div class="flash-notice alert alert-success">
			{{ message }}
		</div>

	{% endfor %}


	<a href=" {{ path('app_demandeur_app_new') }}" class="m-1 btn btn-info float-right btn-sm" role="button">

		<i class="m-1 fa fa-plus" aria-hidden="true"></i>Ajouter</a>

	<a href="{{ path('app_demandeur_app_index') }}" class="m-1 btn btn-info float-right btn-sm">


		<i class="fa fa-list" aria-hidden="true"></i>Liste
	</a>

	<a href="{{ path('app_demandeur_app_edit', {'id': demandeur.id}) }}" class="m-1 btn btn-info float-right btn-sm">
		<i class="fas fa-edit    "></i>
		edit</a>


{% endblock %}

{# {% les donnees affichees %}#}
{% block data %}


	<div class="row">
		<div class="col-12">
			<div class="card card-margin">
				<div class="card-body">
					<div class="row search-body">
						<div class="col-lg-12">
							<div class="search-result">

								<div class="result-body">
									<div class="table-responsive">

										<table class="table widget-26" id="sampleTable">
											<tbody>

												<tr>
													<th>Email</th>
													<td>{{ demandeur.email }}</td>

												</tr>
												<tr>
													<th>Nin</th>
													<td>{{ demandeur.nin }}</td>

												</tr>


												<tr>
													<th>Nom Complet
													</th>
													<td>{{  demandeur.civilite ~' '~ demandeur.prenom  ~' '~ demandeur.nom}}</td>

												</tr>

												<tr>
													<th>Adresse</th>
													<td>{{ demandeur.adresse }}</td>

												</tr>
												<tr>
													<th>Téléphone</th>
													<td>{{ demandeur.telephone }}</td>

												</tr>

												<tr>
													<th>Situation Matrimoniale</th>
													<td>{{ demandeur.situationMatrimoniale }}</td>

												</tr>

												<tr>
													<th>Date et lieu de Naissance</th>
													<td>
														Né le
														{{ demandeur.dateNaissance ? demandeur.dateNaissance|date('Y-m-d') : '' }}
														à
														{{ demandeur.lieuNaissance }}

													</td>


												</tr>


												<tr>
													<th>Adresse Résidentielle</th>
													<td>{{ demandeur.adresseResidentielle }}</td>

												</tr>

												<tr>
													<th>Nationalite</th>
													<td>{{ demandeur.nationalite }}</td>

												</tr>
											</tbody>
										</table>


									</div>
								</div>
							</div>
						</div>
					</div>

				</div>
			</div>
		</div>
	</div>
{% endblock %}
