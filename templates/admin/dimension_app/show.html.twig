{% extends 'admin/include/main.html.twig' %}

{#{% titre de l'activite %}#}
{% block title_job %}
	<h1 class="card-title">
		{{  'Edit Dimension' }}
	</h1>
{% endblock %}

{# {% operation possible %}#}
{% block option %}
	{% for message in app.flashes('success') %}

		<div class="flash-notice alert alert-success">
			{{ message }}
		</div>

	{% endfor %}
	<a href=" {{ path('app_dimension_app_index') }}" class="m-1 btn btn-info float-right btn-sm" role="button">
		<i class="m-1 fa fa-plus" aria-hidden="true"></i>Ajouter</a>
	<a href="{{ path('app_demandeur_app_index') }}">back to list</a>


{% endblock %}

{# {% les donnees affichees %}#}
{% block data %}

	<div class="row">
		<div class="col-12">
			<div class="card card-margin">
				<div class="card-body">
					<div class="row search-body">
						<div class="col-lg-12">
							<div class="search-result">

								<div class="result-body">
									<div class="table-responsive">

										<table class="table widget-26" id="sampleTable">idget-26" id="sampleTable">idget-26" id="sampleTable">idget-26" id="sampleTable">
											<tbody>
												<tr>
													<th>Id</th>
													<td>{{ dimension.id }}</td>
												</tr>
												<tr>
													<th>Longueur</th>
													<td>{{ dimension.longueur }}</td>
												</tr>
												<tr>
													<th>Largeur</th>
													<td>{{ dimension.largeur }}</td>
												</tr>
												<tr>
													<th>Superficie</th>
													<td>{{ dimension.superficie }}</td>
												</tr>
											</tbody>
										</table>

										<a href="{{ path('app_dimension_app_index') }}">back to list</a>

										<a href="{{ path('app_dimension_app_edit', {'id': dimension.id}) }}">edit</a>

										{{ include('dimension_app/_delete_form.html.twig') }}


									</div>
								</div>
							</div>
						</div>
					</div>

				</div>
			</div>
		</div>
	</div>
{% endblock %}
{% block scripts %}
	{{ parent() }}

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
	<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


{% endblock %}
