{% extends 'admin/include/main.html.twig' %}

{#{% titre de l'activite %}#}
{% block title_job %}
	<h1 class="card-title">
		{{  'Model SMS' }}
	</h1>
{% endblock %}

{# {% operation possible %}#}
{% block option %}

	<a href=" {{ path('app_model_sms_app_new') }}" class="m-1 btn btn-info float-right btn-sm" role="button">


		<i class="m-1 fa fa-plus" aria-hidden="true"></i>Ajouter</a>


{% endblock %}

{# {% les donnees affichees %}#}
{% block data %}

	<div class="row">
		<div class="col-12">
			<div class="card card-margin">
				<div class="card-body">
					<div class="row search-body">
						<div class="col-lg-12">
							<div class="search-result">

								<div class="result-body">
									<div class="table-responsive">
										<table class="table widget-26" id="sampleTable">

											<thead>
												<tr>
													<th>Code</th>
													<th>Message</th>
													<th>Parametre</th>
													<th>actions</th>
												</tr>
											</thead>
											<tbody>
												{% for model_sm in model_sms %}
													<tr>

														<td>{{ model_sm.code }}</td>
														<td>{{ model_sm.message }}</td>
														<td>{{ model_sm.parametre ? model_sm.parametre|json_encode : '' }}</td>
														<td>
															<a href="{{ path('app_model_sms_app_show', {'id': model_sm.id}) }}" class="btn btn-outline-dark m-1 ">
																<i class="fa fa-eye" aria-hidden="true"></i>
															</a>
															<a href="{{ path('app_model_sms_app_edit', {'id': model_sm.id}) }}" class="btn btn-outline-dark m-1">
																<i class="fas fa-edit    "></i>
															</a>

														</td>
													</tr>
												{% else %}
													<tr>
														<td colspan="5">no records found</td>
													</tr>
												{% endfor %}
											</tbody>


										</table>


									</div>
								</div>
							</div>
						</div>
					</div>

				</div>
			</div>
		</div>
	</div>
{% endblock %}
