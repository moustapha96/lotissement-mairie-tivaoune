{# {% operation possible %}#}
{% block option %}
	{% for message in app.flashes('success') %}

		<div class="flash-notice alert alert-success">
			{{ message }}
		</div>

	{% endfor %}

	<a href=" {{ path('app_parcelle_app_new') }}" class="m-1 btn btn-info float-right btn-sm" role="button">


		<i class="m-1 fa fa-plus" aria-hidden="true"></i>Ajouter</a>
	<a href="{{ path('app_parcelle_app_index') }}" class="m-1 btn btn-info float-right btn-sm">
		<i class="fa fa-list" aria-hidden="true"></i>Liste
	</a>

	<a href="{{ path('app_parcelle_app_edit', {'id': parcelle.id}) }}" class="m-1 btn btn-info float-right btn-sm">
		<i class="fas fa-edit    "></i>Editer
	</a>


{% endblock %}

{# {% les donnees affichees %}#}
