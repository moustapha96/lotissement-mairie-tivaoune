					<div class="row search-body">
						<div class="col-lg-12">
							<div class="search-result">

								<div class="result-body">
									<div class="table-responsive">
										<table class="table widget-26" id="sampleTable">
											<tbody>

												<tr>
													<th>Numero</th>
													<td>{{ parcelle.numero }}</td>
												</tr>
												<tr>
													<th>Lotissement</th>
													<td>{{ parcelle.lotissement.denomination }}</td>
												</tr>

												<tr>
													<th>Largeur</th>
													<td>{{ parcelle.dimension.largeur }}
														metres
													</td>
												</tr>
												<tr>
													<th>Longueur</th>
													<td>{{ parcelle.dimension.longueur }}
														metres</td>
												</tr>

												<tr>
													<th>Superficie</th>
													<td>{{ parcelle.dimension.superficie }}
														m2
													</td>
												</tr>


											</tbody>
										</table>


									</div>
								</div>
							</div>
						</div>
