{% extends 'admin/include/main.html.twig' %}

{#{% titre de l'activite %}#}
{% block title_job %}
	<h1 class="card-title">
		{{  'Liste Statuts' }}
	</h1>
{% endblock %}

{# {% operation possible %}#}
{% block option %}


	<a href=" {{ path('app_statut_app_new') }}" class="m-1 btn btn-info float-right btn-sm" role="button">


		<i class="m-1 fa fa-plus" aria-hidden="true"></i>Ajouter</a>


{% endblock %}

{# {% les donnees affichees %}#}
{% block data %}

	<div class="row">
		<div class="col-12">
			<div class="card card-margin">
				<div class="card-body">
					<div class="row search-body">
						<div class="col-lg-12">
							<div class="search-result">

								<div class="result-body">
									<div class="table-responsive">
										<table class="table widget-26" id="sampleTable">
											<thead>
												<tr>

													<th>Denomination</th>
													<th>Status</th>
													<th>actions</th>
												</tr>
											</thead>
											<tbody>
												{% for statut in statuts %}
													<tr>

														<td>{{ statut.denomination }}</td>
														<td>

															<a href="{{ path('app_statut_statut_app_update', { 'id' : statut.id } ) }}" class="btn btn-outline-{{ statut.status ? 'success' : 'danger'}}  " type="button">


																<i class="fa-solid fa-{{ statut.status ? 'user': 'lock' }}"></i>


																{{ statut.status ? 'Activé' : 'Desactivé' }}


															</a>

														</td>
														<td>
															<a href="{{ path('app_statut_app_show', {'id': statut.id}) }}" class=" btn btn-outline-dark ">
																<i class="fa fa-eye" aria-hidden="true"></i>
															</a>

															<a href="{{ path('app_statut_app_edit', {'id': statut.id}) }}" class="m-1 btn btn-outline-dark">

																<i class="fas fa-edit    "></i>
															</a>
														</td>
													</tr>
												{% else %}
													<tr>
														<td colspan="4">no records found</td>
													</tr>
												{% endfor %}
											</tbody>
										</table>


									</div>
								</div>
							</div>
						</div>
					</div>

				</div>
			</div>
		</div>
	</div>
{% endblock %}
