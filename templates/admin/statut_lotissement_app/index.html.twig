{% extends 'admin/include/main.html.twig' %}

{#{% titre de l'activite %}#}
{% block title_job %}
	<h1 class="card-title">
		{{  'Liste Etat Lotissement' }}
	</h1>
{% endblock %}

{# {% operation possible %}#}
{% block option %}
	{% for message in app.flashes('success') %}

		<div class="flash-notice alert alert-success">
			{{ message }}
		</div>

	{% endfor %}

	<a href=" {{ path('app_statut_lotissement_app_new') }}" class="m-1 btn btn-info float-right btn-sm" role="button">


		<i class="m-1 fa fa-plus" aria-hidden="true"></i>Ajouter</a>


{% endblock %}

{# {% les donnees affichees %}#}
{% block data %}

	<div class="row">
		<div class="col-12">
			<div class="card card-margin">
				<div class="card-body">
					<div class="row search-body">
						<div class="col-lg-12">
							<div class="search-result">

								<div class="result-body">
									<div class="table-responsive">
										<table class="table widget-26" id="sampleTable">
											<thead>
												<tr>

													<th>Denomination</th>
													<th>Status</th>
													<th>actions</th>
												</tr>
											</thead>
											<tbody>
												{% for statut_lotissement in statut_lotissements %}
													<tr>

														<td>{{ statut_lotissement.denomination }}</td>
														<td>


															<a href="{{ path('app_statut_lotissement_statut_app_update', { 'id' : statut_lotissement.id } ) }}" class="btn btn-outline-{{ statut_lotissement.status ? 'success' : 'danger'}}  " type="button">

																<i class="fa-solid fa-{{ statut_lotissement.status ? 'user': 'lock' }}"></i>

																{{ statut_lotissement.status ? 'Activé' : 'Desactivé' }}

															</a>


														</td>
														<td>
															<a href="{{ path('app_statut_lotissement_app_show', {'id': statut_lotissement.id}) }}" class="btn btn-outline-dark">
																<i class="fa fa-eye" aria-hidden="true"></i>
															</a>
															<a href="{{ path('app_statut_lotissement_app_edit', {'id': statut_lotissement.id}) }}" class="btn btn-outline-dark">
																<i class="fas fa-edit    "></i>
															</a>

														</td>
													</tr>
												{% else %}
													<tr>
														<td colspan="4">no records found</td>
													</tr>
												{% endfor %}
											</tbody>
										</table>


									</div>
								</div>
							</div>
						</div>
					</div>

				</div>
			</div>
		</div>
	</div>
{% endblock %}
