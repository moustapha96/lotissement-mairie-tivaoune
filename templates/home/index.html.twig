									{% for message in messages %}
										<div class="alert alert-{{ label }}">{{ message }}</div>
									{% endfor %}
								{% endfor %}
							</div>
						</div>
						<div class="p-2 scrollable-div">
							{{ form_start(form) }}
							{{ form_widget(form) }}
							<div class="d-flex justify-content-center mt-3">
								<button class="btn btn-outline-success">
									{{ button_label|default('Valider') }}
