<!DOCTYPE html>
<html lang="fr">

	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">

		{% block head %}
			<link rel="stylesheet" href="style.css"/>
			<title>
				Mairie Tivaoune
																																			- Lotissement -
				{% block title %}{% endblock %}
			</title>
		{% endblock %}

		{% block style %}
			{% include 'layouts/style.html.twig' %}
		{% endblock %}


	</head>

	<body class="hold-transition sidebar-mini">
		<div
			class="wrapper">
			<!-- Navbar -->
			{% include 'layouts/header.html.twig' ignore missing %}
			<!-- /.navbar -->

			<!-- Main Sidebar Container -->
				<aside
				class="main-sidebar sidebar-dark-primary elevation-4"> <!-- Brand Logo -->
				<a href="{{ app.user.roles[0] == 'ROLE_USER' ? path('client_home'): path('admin_home') }}" class="brand-link">

					<img src="{{ asset('images/lotissement.jpeg') }}" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
					<span class="brand-text font-weight-light">Lotissement</span>
				</a>

				<!-- Sidebar -->
				<div
					class="sidebar">
					<!-- Sidebar user panel (optional) -->
					<div class="user-panel mt-3 pb-3 mb-3 d-flex">
						<div class="image">
							<img src="/avatars/{{ app.user.avatar }}" class="img-circle elevation-2" alt="User Image">
						</div>
						<div class="info">
							<a class="d-block">
								{{ app.user.firstname ~ ' ' ~ app.user.lastname }}
							</a>
							<a class="d-block" href="{{ app.user.roles[0] == 'ROLE_USER' ? path('client_profil'): path('admin_profil') }}">
								{% if app.user.roles[0] == "ROLE_ADMIN" %}
									Agent
								{% endif %}
								{% if app.user.roles[0] == "ROLE_USER" %}
									Demandeur
								{% endif %}

							</a>
						</div>
					</div>

					<!-- SidebarSearch Form -->
					<div class="form-inline">
						<div class="input-group" data-widget="sidebar-search">
							<input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
							<div class="input-group-append">
								<button class="btn btn-sidebar">
									<i class="fas fa-search fa-fw"></i>
								</button>
							</div>
						</div>
					</div>

					<!-- Sidebar Menu -->
					<nav class="mt-2">
						<ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false"> {% block menu %}{% endblock %}

							</ul>
						</nav>
						<!-- /.sidebar-menu -->
					</div>
					<!-- /.sidebar -->
				</aside>

				{% block content %}
					<div class="content-wrapper">
						<div class="content-header">
							<div class="container-fluid">
								<div class="row mb-2">
									<div
										class="col-sm-6 text-bold">
										{# {% titre de l'activite %} #}
										{% block title_job %}{% endblock %}
									</div>
									<div class="col-sm-6">
										<ol class="breadcrumb float-sm-right">
											<li
												class="breadcrumb-item">

												{# {% operation possible %} #}
												{% block option %}{% endblock %}

												<a class="btn btn-outline-primary float-right ml-1 btn-sm" href="javascript:void(0);" onclick="history.back();">
													<i class="fa fa-reply"></i>
													Retour
												</a>

												{% set previousPageUrl = app.session.get('previous_page') %}
												{% if previousPageUrl %}
													<a class="btn btn-outline-primary float-right ml-1 btn-sm" href="{{ previousPageUrl }}">
														<i class="fa fa-reply"></i>
														Retour
													</a>
												{% endif %}


											</li>

										</ol>
									</div>
								</div>
							</div>
							<div class="content">
								<div
									class="container-fluid">
									{# {% les donnees affichees %} #}
									{% block data %}{% endblock %}
								</div>
							</div>
						</div>
					</div>
				{% endblock %}


				<!-- Control Sidebar -->
				<aside
					class="control-sidebar control-sidebar-dark"><!-- Control sidebar content goes here -->
				</aside>
				<!-- /.control-sidebar -->

				<!-- Main Footer -->
				{% block footer %}
					{% include 'layouts/footer.html.twig' ignore missing %}
				{% endblock %}
			</div>
			<!-- ./wrapper -->

			<!-- REQUIRED SCRIPTS -->


			{% block scripts %}
				{% include 'layouts/scripts.html.twig' ignore missing %}
			{% endblock %}

		</body>

	</html>
